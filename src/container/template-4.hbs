<div class="header">
  <div>
    {{> logo2}}
  </div>

  <nav class="header_nav">
    <div class="header_nav_right">
      {{>nav list=header}}
    </div>
  </nav>
</div>

{{#with main}}
<div class="main">
  <img src={{image}} alt="Just picture" class="main_image">
  <div class="main_content">
    <h1 class="main_title">{{heading}}</h1>
    <p class="main_text">{{descriotion}}</p>
    <a href="{{href}}" class="button">{{button}}</a>
  </div>
</div>
{{/with}}

<main class="featured">
  {{#each featured}}
  {{> cardAct data=this}}
  {{/each}}
</main>

<div class="action">
  {{#each actions}}
  {{> cardForm data=this}}
  {{/each}}
</div>

<div class="footer">
  <div>
    {{> logo2}}
    <span class="footer_copyright">Â© 2023</span>
  </div>
  {{#each footer}}
  <div>
    <span class="footer_title">{{title}}</span>
    {{>nav list=links isVertical=true}}
  </div>
  {{/each}}
</div>