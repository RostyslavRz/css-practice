<div class="header">
  <div>
    {{> logo2}}
  </div>

  <nav class="header_nav">
    <div class="header_nav_right">
      {{>nav list=header}}
    </div>
  </nav>
</div>

<main class="form">
  <div class="form_info">
    {{#with info}}
    <h1 class="form_title">{{title}}</h1>
    <p class="form_text">{{description}}</p>
    {{/with}}
  </div>
  {{#with form}}
  <div class="form_reg">

    <div class="form_reg_list">
      {{#each inputs}}
      <input type="{{type}}" placeholder="{{placeholder}}" class="reg_input" id="reg_input_{{id}}" />
      {{/each}}
    </div>

    <div class="form_reg_check">
      <input type="checkbox" name="{{checkbox.name}}">
      <label for="{{checkbox.name}}">{{checkbox.label}}</label>
    </div>

    <button type="submit" class="reg_button">{{button}}</button>
    {{>divider}}
    <p class="reg_info">{{info}}</p>
  </div>
  {{/with}}
</main>

{{#with updates}}
<div class="update">
  <p class="update_title">{{title}}</p>

  {{#each list}}
  <div class="msg">
    <image class="msg_icon" src="http://www.w3.org/2000/svg" alt="32x32">
      <div class="msg_info">
        <p class="msg_user">@{{nickname}}</p>
        <p class="msg_text">{{description}}</p>
      </div>
  </div>
  {{/each}}

  <a href="{{show_all.url}}" class="updates_link">{{show_all.text}}</a>
</div>
{{/with}}

{{#with expirience}}
<div class="exp">
  <div class="exp_header">
    <div class="exp_title">{{title}}</div>
    <div class="exp_badge">{{badge}}</div>
  </div>
  {{#each list}}
  <div class="list">
    <strong class="list_title">{{name}}</strong>
    <p class="list_text">{{details}}</p>
  </div>
  {{/each}}
</div>
{{/with}}

<div class="footer">
  <div>
    {{> logo2}}
    <span class="footer_copyright">Â© 2023</span>
  </div>
  {{#each footer}}
  <div>
    <span class="footer_title">{{title}}</span>
    {{>nav list=links isVertical=true}}
  </div>
  {{/each}}
</div>